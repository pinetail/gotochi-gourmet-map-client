<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jp.pinetail.android.gotochi_gourmet_map"
      android:installLocation="preferExternal"
      android:versionCode="12"
      android:versionName="1.10.0"
>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />      
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application android:icon="@drawable/icon"
          android:label="@string/app_name"
          android:name=".libs.GotochiApplication"
          android:debuggable="false">
        <meta-data android:name="Adlantis_Publisher_ID" android:value="Nzc3Ng%3D%3D%0A" />
        <activity android:name=".MainTabActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".MainActivity"
              android:label="main"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".FavoritesListActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".ListActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".DetailTabActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".CommentsActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".NoneActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".DetailActivity"
              android:label="detail"
              android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".SettingsActivity"
              android:label="設定" />
        <activity android:name=".SettingsCategoryActivity"
              android:label="カテゴリ" />
        <activity android:name=".SettingsWirelessActivity"
              android:label="無線LAN" />
        <activity android:name=".PostActivity"
                  android:label="ご当地ぐるめ！に登録"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                  <category android:name="android.intent.category.DEFAULT" /> 
                  <data android:mimeType="text/plain" />
                  <action android:name="android.intent.action.SEND" />
            </intent-filter>
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="4" />
    <uses-sdk android:targetSdkVersion="7" />
</manifest> 